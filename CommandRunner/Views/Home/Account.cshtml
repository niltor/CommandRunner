@{
	ViewData["Title"] = "Account";
}
<div class="row">
	<div class="col-xs-3">
		<ul>
			<li><a href="" id="setAccount">设置账号</a></li>
		</ul>
	</div>
	<div class="col-xs-8">

		<form asp-action="SetAccountAsync" method="post">

			<div class="form-group">
				<label>
					用户名
				</label>
				<input class="form-control" type="text" value="" name="UserName" />
			</div>
			<div class="form-group">
				<label>
					密码
				</label>
				<input class="form-control" type="password" value="" name="Password" />
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-sm btn-primary">修改</button>
			</div>

			<span>@ViewBag.Result</span>
			
		</form>
	</div>
</div>
